<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="boardMapper">
    <resultMap id="lista" type="com.green.BasicBoard.vo.BoardVO">
        <result column="BOARD_NUM"   property="boardNum"/>
        <result column="TITLE"       property="title"/>
        <result column="WRITER"      property="writer"/>
        <result column="CONTENT"     property="content"/>
        <result column="CREATE_DATE" property="createDate"/>
        <result column="READ_CNT"    property="readCnt"/>
    </resultMap>

    <!-- 게시글목록 조회 -->
    <select id="list" resultMap="lista">
        SELECT BOARD_NUM
                ,TITLE
                ,WRITER
                ,CONTENT
                ,CREATE_DATE
                ,READ_CNT
        FROM BASIC_BOARD
        <!-- searchValue 값이 null도 아니고 안에 안비어있다면~ -->
        <!-- #{} = ''가 붙는다 ${}는 ''가 붙지 않음 컬럼명이 바뀔때만 $사용 -->
        <if test="searchValue != null and !searchValue.equals('') ">
            WHERE ${searchKeyword} LIKE CONCAT('%', #{searchValue}, '%')
            <!-- concat : 문자열 나열 함수 -->

        </if>
    </select>
    <insert id="insert">
        INSERT INTO BASIC_BOARD(
                    TITLE
                    ,WRITER
                    ,CONTENT
                    )
        VALUES(
            #{title}
            ,#{writer}
            ,#{content}
        );
    </insert>
    <select id="onesel" resultMap="lista">
        SELECT BOARD_NUM
            ,TITLE
            ,WRITER
            ,CONTENT
            ,CREATE_DATE
            ,READ_CNT
        FROM BASIC_BOARD
        WHERE BOARD_NUM =#{boardNum}
    </select>


	
</mapper>































